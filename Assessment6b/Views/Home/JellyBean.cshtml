@model IEnumerable<Assessment6b.Models.JellyBean>

@{
    ViewData["Title"] = "JellyBean";
}


<h1>JellyIndex</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Style)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<hr />


<h3>Add a new one!</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJelly">
            <div class="form-group">
                <label class="control-label">JellyStyle</label>
                <input name="style" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">JellyRating</label>
                <input name="rating" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="CreateJelly" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>
